
<h1> Reserve a property </h1>
<form action="/reserve" method="post">
  <h3> Seaside Property: £75 per night </h3>
  <input type="text" name="check_in_date" placeholder="check in date">
	<input type="text" name="check_out_date" placeholder="check out_date">
  <input type="text" name="r_duration" placeholder="duration">
<input type="submit" value="Reserve">
</form>

<div>
<ul>
  <%@properties.each do |property| %>
    <li><%= property.pl_name %>
      <%= property.pl_description %>
      £<%= property.pl_price_night %>
    </li>
  <% end %>
</ul>
</div>
