	display: none;
}

.dropdown_list{
	background: #555;
	display: block;
	color: #fff;
	text-shadow: 0 -1px 0 #000;
	cursor: pointer;
}

.dropdown_list:hover{
	background: #666;
}

/* changed ul li:hover ul to .individual_menu_items:hover */

.individual_menu_items:hover ul{
 /* this reveals the dropdown menu on hover */
 display: block;
 opacity: 1;
